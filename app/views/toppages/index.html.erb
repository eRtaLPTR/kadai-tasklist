<h1>Toppages#index</h1>
<p>Find me in app/views/toppages/index.html.erb</p>
<% if logged_in? %>
  <%# ログインしているとき、 %>
  <div class="row">
    <%= render "layouts/sidebar" %>
    <div class="col-xs-8">
      <table class="table">
        <tr><th>ID</th><th>内容</th><th>ステータス</th><th>操作</th></tr>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= link_to "詳細", task_path(task) %> <%= link_to "編集", edit_task_path(task) %> <%= link_to "削除", task_path(task), method: :delete %></td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
<% else %>
  <%# ログインしていないとき、 %>
  <div class="center jumpbotron">
    <div class="text-center">
      <h1>Welcome to the tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
